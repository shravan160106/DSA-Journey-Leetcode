class Solution {
    public double findMaxAverage(int[] nums, int k) {
        int sum = 0;
        //adding first all the elements in the window
        for(int i=0;i<k;i++){
            sum += nums[i];
        }
        int maxsum = sum;
        //starting sliding window
        int start = 0;
        int end = k;

        while(end<nums.length){
            sum -= nums[start]; //remove previous element
            start++;
            sum += nums[end]; //add next element
            end++;
            maxsum = Math.max(maxsum, sum); //update max element
        }
        return (double) maxsum/k;
    }
}
