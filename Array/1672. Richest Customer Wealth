class Solution {
    public int maximumWealth(int[][] accounts) {
        int rows = accounts.length;
        int cols = accounts[0].length;
        int maxWealth = 0;
        for(int i=0;i<rows;i++){
            int rowsum = 0; //very imp to initialize inside the row loop 
            for(int j=0;j<cols;j++){
                rowsum += accounts[i][j];
            }
            maxWealth = Math.max(maxWealth,rowsum);
        }
        return maxWealth;
    }
}
