class Solution {
    public int lengthOfLastWord(String s) {
        int count = 0;
       int last = s.length()-1;
       //skips trails and stops after first word(working)
       while(last>=0 && s.charAt(last)==' '){
        last--;
       }
       //keeps on counting before hitting a space
       while(last>=0 && s.charAt(last)!=' '){
        count++;
        last--;
       }
       return count;
        
    }
}
